# Multi-stage build for CloudOps Bot ECS Agent
# Build stage
FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the agent binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o agent ./cmd/agent

# Runtime stage
FROM alpine:latest

# TODO: Add any runtime dependencies here (e.g., CA certificates for HTTPS)
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder
COPY --from=builder /app/agent .

# TODO: Add any additional files needed at runtime
# COPY --from=builder /app/config ./config

# Run the agent
CMD ["./agent"]
